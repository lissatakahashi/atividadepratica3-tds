@page
@model tpte03.RazorPages.Pages.Feedback.Index

<h1>Feedbacks registrados</h1>

<hr/>
<td><a asp-page="/Feedback/Create">Cadastrar novo feedback</a></td>
<hr/>

<div>
    <table>
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(model => model.FeedbackList[0].IdFeedback)</td>
                <td>@Html.DisplayNameFor(model => model.FeedbackList[0].NomeCliente)</td>
                <td>@Html.DisplayNameFor(model => model.FeedbackList[0].EmailCliente)</td>
                <td>@Html.DisplayNameFor(model => model.FeedbackList[0].DataFeedback)</td>
                <td>@Html.DisplayNameFor(model => model.FeedbackList[0].Comentario)</td>
                <td>@Html.DisplayNameFor(model => model.FeedbackList[0].Avaliacao)</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var feedbackModel in Model.FeedbackList)
            {
                <tr>
                    <td>@Html.DisplayFor(model => feedbackModel.IdFeedback)</td>
                    <td>@Html.DisplayFor(model => feedbackModel.NomeCliente)</td>
                    <td>@Html.DisplayFor(model => feedbackModel.EmailCliente)</td>
                    <td>@Html.DisplayFor(model => feedbackModel.DataFeedback)</td>
                    <td>@Html.DisplayFor(model => feedbackModel.Comentario)</td>
                    <td>@Html.DisplayFor(model => feedbackModel.Avaliacao)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@feedbackModel.IdFeedback">Alterar</a>
                        <a asp-page="./Details" asp-route-id="@feedbackModel.IdFeedback">Visualizar</a>
                        <a asp-page="./Delete" asp-route-id="@feedbackModel.IdFeedback">Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>